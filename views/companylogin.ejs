<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registration</title>
    <link rel="stylesheet" href="style/ok.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Open Sans', sans-serif;
            font-family: 'Ysabeau Infant', sans-serif;
        }

        body {
            background: url("https://images.squarespace-cdn.com/content/v1/583ca2f2d482e9bbbef7dad9/1485838058393-7TTHGDWIQI5ATHQF0CBA/operation-community-water-footprint.jpg?format=2500w");
            background-position: center;
            background-size: cover;
            z-index: -1;
        }

        .box {
            display: flex;
            flex-direction: column;
            width: 100%;
            align-items: center;
            border: 1px solid black;
            padding: 30px;
            background-color: white;
        }

        label {
            margin-bottom: 3px;
        }

        .box input,
        select {
            width: 193px;
            padding: 7px;
            border: 1px solid black;
            border-radius: 5px;
        }

        input[type="email"] {
            cursor: not-allowed;
        }

        .box div {
            width: 200px;
            display: flex;
            padding: 7px;
            flex-direction: column;
        }

        .container {
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        button {
            border: 1px solid black;
            cursor: pointer;
            background: none;
            width: fit-content;
            padding: 10px;
        }

        h1 {
            font-size: 30px;
            color: red;
            margin-bottom: 40px;
            z-index: 10;
        }

        .b1 {
            display: flex;
            align-items: center;
        }

        button:hover {
            background-color: orangered;
            border: 0px;
            color: white;
        }

        @media only screen and (max-width: 500px) {
            .container {
                height: 140vh;
            }

            h1 {
                margin: 10px;
                width: 100%;
                overflow-x: auto;
                white-space: nowrap;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Hello ,<%= name %>
        </h1>
        <div>
            <div class="box">
                <div>
                    <input type="email" name="email" id="email" disabled value="<%= email %>" />
                </div>
                <div>
                    <label for="pass">Password:</label>
                    <input type="password" name="pass" placeholder="Enter the Password" id="pass" />
                </div>
                <div>
                    <label for="cpass">Confirm Password:</label>
                    <input type="text" name="cpass" placeholder="Enter the Password Again" id="cpass" />
                </div>
                <div class="b1">
                    <button id="ok">Register</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.querySelector("#ok").addEventListener("click", function (event) {
            var email = document.querySelector('#email').value;
            var password = document.querySelector('#pass').value;
            var cpassword = document.querySelector('#cpass').value;
            const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]+$/;
            if (password === '') {
                alert("Please enter the password");
            }
            else if (cpassword === '') {
                alert("Please enter the conform password");
            }
            else if (password != cpassword) {
                alert("password and conform password are not the same");
            }
            else if (!isValidPassword(password)) {
                alert("password must contain 1 small and 1 captial character,a number,a special character");
            }
            else {
                fetch('/cregister/' + email + '/' + password)
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            alert("Registered successfully");
                            window.location.href = '/companylogin';
                        }
                        else {
                            alert('Please try again');
                        }
                    })
            }
        });
        function isValidPassword(password) {
            return passwordRegex.test(password);
        }

    </script>
</body>

</html>